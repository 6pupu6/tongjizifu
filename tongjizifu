#include<stdio.h>
#include<windows.h>
#include<string.h>
int main()
{
	char p[1000];
	char m[1000];
	int i,count,j;
	count=0; 
	printf("输入一段英文：\n");
	gets(p);
	strlwr(p);
	printf("输入你想查询的单词\n");
    gets(m);	
	for(i=0;i<strlen(p);i++)
	{
	if(p[i]==m[j]&&p[i+1]==m[j+1])
		{
			count++;
		}
	}
printf("个数有%d个\n",count);
	return 0; 
	 
}
